<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Alex Portfolio", sticky: false, time: 1500) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Alex Portfolio", sticky: false, time: 1500) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Alex Portfolio", sticky: false, time: 1500) %>
<% end %>
