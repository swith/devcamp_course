<div class="col-md-4 card-container" data-id="<%= portfolio_item.id %>">
  <div class="card mb-4 shadow-sm">
    <%= image_tag portfolio_img(portfolio_item.thumb_image.url, 'thumb') %>
    <div class="card-body">
      <p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span>
        <%= portfolio_item.subtitle %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to "View", portfolio_show_path(portfolio_item), class:"btn btn-sm btn-outline-secondary" %>
          <%= link_to "Edit", edit_portfolio_path(portfolio_item), class:"btn btn-sm btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
